    "lint-staged": "13.2.3",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.14",
    "typescript": "^5.4.4",
    "vite": "^4.5.3",
    "vite-plugin-pwa": "^0.19.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.{less,html}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}